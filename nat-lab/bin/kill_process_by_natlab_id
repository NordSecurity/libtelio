#!/usr/bin/env bash

if [[ "$#" -ne 1 ]]; then
    # Invalid arguments
    exit 2
fi

NATLAB_ID=$1

echo "Executing kill process by natlab id script"

for pid in $(ps -e -o pid=); do
    if [[ -f "/proc/${pid}/environ" ]]; then
        if tr '\000' '\n' < /proc/${pid}/environ | grep -q "^KILL_ID=${NATLAB_ID}$"; then
            cmd=$(tr -d '\000' < /proc/${pid}/cmdline || echo "N/A")
            kill "${pid}"
            wait "${pid}" 2>/dev/null
            exit 0
        fi
    fi
done

# No such process
exit 3